# Emacs shortcut
alias e='emacs -nw'

# clipboard interaction
alias xclip='xclip -sel clip'

# adding more colors by default
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias less='less -R'

# handy short aliases for commonly used commands
alias h='history'
alias j='jobs -l'

# safer rm that asks confirmation
alias rm='rm -i'

# side-by-side diff
alias vdiff='diff-y -W $(tput cols) --suppress-common-lines'
alias vdifff='diff-y -W $(tput cols)'

# The ubiquitous 'll': directories first, with alphanumeric sorting:
alias ll="ls -lhFv --group-directories-first"
alias lm='ll | less'       #  Pipe through 'less'
alias lr='ll -R'           #  Recursive ls.
alias la='ll -A'           #  Show hidden files.
