# Some useful aliases
alias gcc='gcc -pedantic -Wall -W -Wextra -Wfloat-equal -Wpadded -Wshadow -Wunreachable-code -Winline -Wno-long-long -std=c99'
alias mutt='mutt -F ~/.muttrc '
alias xclip='xclip -sel clip'
alias grep='grep --color=always'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
alias less='less -R'
alias h='history'
alias j='jobs -l'
alias la='ls -lahF'
alias ll='ls -lhF'
alias rm='rm -i'
alias alpha='ssh gbalats@alpha.cs.umass.edu '
alias omega='ssh gbalats@omega.cs.umass.edu '
alias lobo='ssh lobo@lobo.di.uoa.gr '
